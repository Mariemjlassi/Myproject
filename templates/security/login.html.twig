{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>

.login-block {
    background: #4F6F52;
    background: -webkit-linear-gradient(to bottom, #BFD8AF, #99BC85);
    background: linear-gradient(to bottom, #FF9F66, #FFFAE6);
    float: left;
    width: 100%;
    padding: 50px 0;
}

.banner-sec {
    
    min-height: 50px;
    border-radius: 0 10px 10px 0;
    padding: 0;
   
   
}

.container {
    background: #fff;
    border-radius: 10px;
    box-shadow: 15px 20px 0px rgba(0, 0, 0, 0.1);
    width: 1000px;
    
   
}

.carousel-inner {
    border-radius: 0 10px 10px 0;
}

.carousel-caption {
    text-align: left;
    left: 5%;
}


.login-sec {
    padding: 50px 30px;
    position: relative;
}

.login-sec .copy-text {
    position: absolute;
    width: 80%;
    bottom: 20px;
    font-size: 13px;
    text-align: center;
}



.login-sec h2 {
    margin-bottom: 30px;
    font-weight: 800;
    font-size: 30px;
    color: #176B87;
}

.login-sec h2:after {
    content: " ";
    width: 100px;
    height: 5px;
    background: #EEC759;
    display: block;
    margin-top: 20px;
    border-radius: 3px;
    margin-left: auto;
    margin-right: auto;
}

.btn-login {
    background: #DC6B19;
    color: #fff;
    font-weight: 600;
}

.banner-text {
    width: 70%;
    position: absolute;
    bottom: 200px;
    padding-left: 20px;
}

.banner-text h2 {
    color: #fff;
    font-weight: 600;
}

.banner-text h2:after {
    content: " ";
    width: 100px;
    height: 5px;
    background: #FFF;
    display: block;
    margin-top: 20px;
    border-radius: 3px;
}



</style>

<section class="login-block" style="margin-top:-25px">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Se connecter</h2>
               <form method="post">

               {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

                    <div class="form-group">
                        <label for="inputEmail" >Nom d'utilisateur</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus/><br><br>
                        </div>
                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br><br>
                        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
                        </div>
                    <button type="submit" class="btn btn-login float-right">Valider</button>
                </form>
                <p>
    <a href="{{ path('app_forgot_password_request') }}">Forgot your password?</a>
</p>
                <p-toast></p-toast>
            </div>
            <div class="col-md-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="https://i.pinimg.com/564x/8d/48/d2/8d48d253923c78a30650faa95462ca11.jpg" style="width:700px">
                            <div class="carousel-caption d-none d-md-block">
                                
                            </div>
                        </div>
                        <!-- Add your other carousel items here -->
                    </div>
                </div>	   
            </div>
            
        </div>
    </div>
</section>
{% endblock %}
