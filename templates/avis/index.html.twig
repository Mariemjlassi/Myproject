{% extends 'base.html.twig' %}

{% block title %}Hello AvisController!{% endblock %}

{% block body %}
 <style>
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .table-hover tbody tr:hover {
            background-color: #f5f5f5;
        }
        .btn-primary {
            background-color: #6c63ff;
            border-color: #6c63ff;
        }
        .btn-primary:hover {
            background-color: #5149cc;
            border-color: #5149cc;
        }
    </style>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des Utilisateurs</h1>
        
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Utilisateur</h5>
                </div>
                <div class="card-body">
    <table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>User Email</th>
            <th>Book Title</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
        {% for a in avis %}
            <tr>
                <td>{{ a.id }}</td>
                <td>{{ a.user.email }}</td>
                <td>{{ a.livre.titre }}</td>
                <td>{{ a.message }}</td>  
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}